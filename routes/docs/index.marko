    <div.doc-layout>
        <doc-sidebar name=input.name structure=input.structure toc=input.toc />
        <div.doc-container>
            <div.doc-content>
                <include(input.doc)/>
                <edit-on-github name=input.name/>
                <site-footer/>
            </div>
        </div>
    </div>
</site-layout>
